<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">
    
    <ImageView
        android:id="@+id/profileImage"
        android:src="@drawable/simpson_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"/>

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="심슨심슨"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/profileImage"
        app:layout_constraintStart_toEndOf="@id/profileImage"
        android:layout_marginStart="15dp" />

    <ImageView
        android:id="@+id/locationIcon"
        android:src="@drawable/baseline_location_on_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/nickname"
        app:layout_constraintBottom_toBottomOf="@id/locationName"
        />

    <TextView
        android:id="@+id/locationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ewha engineer"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toEndOf="@id/locationIcon"
        android:layout_marginStart="5dp" />

    <ImageView
        android:id="@+id/closeIcon"
        android:src="@drawable/baseline_close_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/profileImage"
        app:layout_constraintBottom_toBottomOf="@id/profileImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        />

    <TextView
        android:id="@+id/postTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy Days~~"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="@id/profileImage"
        android:layout_marginTop="50dp"
         />

    <TextView
        android:id="@+id/postDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023.05.19 Thu"
        android:textColor="#D9D9D9"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/profileImage"
        app:layout_constraintTop_toBottomOf="@id/postTitle"
        android:layout_marginTop="15dp"
     />

    <TextView
        android:id="@+id/heartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❤  3"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_corner_background"
        app:layout_constraintStart_toStartOf="@id/profileImage"
        app:layout_constraintTop_toBottomOf="@id/postDate"
        android:layout_marginTop="25dp"
        android:padding="7dp"
        />

    <TextView
        android:id="@+id/goodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="👍  2"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_corner_background"
        app:layout_constraintStart_toEndOf="@id/heartButton"
        app:layout_constraintTop_toTopOf="@id/heartButton"
        android:layout_marginStart="20dp"
        android:padding="7dp"
        />

    <TextView
        android:id="@+id/wowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="😮  0"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_corner_background"
        app:layout_constraintStart_toEndOf="@id/goodButton"
        app:layout_constraintTop_toTopOf="@id/heartButton"
        android:layout_marginStart="20dp"
        android:padding="7dp"
        />

    <TextView
        android:id="@+id/hahaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="😆  0"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_corner_background"
        app:layout_constraintStart_toEndOf="@id/wowButton"
        app:layout_constraintTop_toTopOf="@id/heartButton"
        android:layout_marginStart="20dp"
        android:padding="7dp"
        />

    <ImageView
        android:id="@+id/samplePic1"
        android:src="@drawable/sample_pic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/heartButton"
        app:layout_constraintStart_toStartOf="@id/profileImage"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/sample_pic1_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wow"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/samplePic1"
        app:layout_constraintTop_toBottomOf="@id/samplePic1"
        android:layout_marginTop="15dp"
        />

    <ImageView
        android:id="@+id/samplePic2"
        android:src="@drawable/sample_pic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/samplePic1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        />

    <TextView
        android:id="@+id/sample_pic2_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 셀카📸"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/samplePic2"
        app:layout_constraintTop_toBottomOf="@id/samplePic1"
        android:layout_marginTop="15dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>